{
  "name": "@tiangong-ai/mcp-server",
  "version": "0.0.8",
  "description": "TianGong AI MCP Server",
  "license": "MIT",
  "author": "Nan LI",
  "type": "module",
  "bin": {
    "tiangong-ai-mcp-stdio": "dist/src/index.js",
    "tiangong-ai-mcp-http": "dist/src/index_server.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/src/*.js",
    "start": "npm run build && npx dotenv -e .env -- npx @modelcontextprotocol/inspector node dist/src/index.js",
    "start:server": "npm run build && npx dotenv -e .env -- node dist/src/index_server.js",
    "lint": "prettier -c --write \"**/**.{js,jsx,tsx,ts,less,md,json}\""
  },
  "dependencies": {
    "@langchain/langgraph": "^0.2.65",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "weaviate-client": "^3.5.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.10.2",
    "@types/express": "^5.0.1",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "shx": "^0.4.0",
    "supergateway": "^2.7.0",
    "typescript": "^5.8.3"
  }
}
